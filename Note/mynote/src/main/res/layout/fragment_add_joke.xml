<ScrollView android:id="@+id/noScrollView"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusableInTouchMode="true"
            android:focusable="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/asterisk_padding"
                    android:text="段子说明"
                    android:textSize="14sp"
                    />

                <com.github.customview.MyTextView
                    android:id="@+id/tv_joke_gxdz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/asterisk_padding"
                    android:paddingBottom="3dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="3dp"
                    android:text="搞笑段子"
                    android:textSize="12sp"
                    app:my_tv_border_color="@color/c_F8F8F83"
                    app:my_tv_border_width="1px"
                    app:my_tv_corner_radius="10dp"
                    app:my_tv_press="@color/c_divider"
                    app:my_tv_solid="@color/white"/>

                <com.github.customview.MyTextView
                    android:id="@+id/tv_joke_ssly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/asterisk_padding"
                    android:paddingBottom="3dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="3dp"
                    android:text="说说留言"
                    android:textSize="12sp"
                    app:my_tv_border_color="@color/c_F8F8F83"
                    app:my_tv_border_width="1px"
                    app:my_tv_corner_radius="10dp"
                    app:my_tv_press="@color/c_divider"
                    app:my_tv_solid="@color/white"/>

                <com.github.customview.MyTextView
                    android:id="@+id/tv_joke_gxly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/asterisk_padding"
                    android:paddingBottom="3dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="3dp"
                    android:text="搞笑留言"
                    android:textSize="12sp"
                    app:my_tv_border_color="@color/c_F8F8F83"
                    app:my_tv_border_width="1px"
                    app:my_tv_corner_radius="10dp"
                    app:my_tv_press="@color/c_divider"
                    app:my_tv_solid="@color/white"/>
            </LinearLayout>

            <com.github.customview.MyEditText
                android:id="@+id/et_joke_remark"
                style="@style/editTextStyle"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/asterisk_padding"
                android:layout_marginRight="@dimen/asterisk_padding"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLength="30"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:textSize="14sp"
                app:my_et_border_color="@color/top_color2"
                app:my_et_border_width="1px"
                app:my_et_corner_radius="4px"
                tools:text="段子说明"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/asterisk"
                    android:text="请填写搞笑段子"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/tv_joke_lengthprompt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="(0/3000)"
                    />

                <TextView
                    android:id="@+id/tv_joke_copy"
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="复制"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    />

                <TextView
                    android:id="@+id/tv_joke_paste"
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="粘贴"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    />

                <TextView
                    android:id="@+id/tv_joke_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="清除"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    />
            </LinearLayout>

            <com.github.customview.MyEditText
                android:id="@+id/et_joke_content"
                style="@style/editTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/asterisk_padding"
                android:layout_marginRight="@dimen/asterisk_padding"
                android:layout_marginTop="5dp"
                android:gravity="top"
                android:maxLength="3000"
                android:minHeight="250dp"
                android:padding="5dp"
                app:my_et_border_color="@color/top_color2"
                app:my_et_border_width="1px"
                app:my_et_corner_radius="4px"
                app:my_et_hiddenClear="true"
                android:textSize="14sp"
                />

        </LinearLayout>


        <include layout="@layout/item_create_time" />
    </LinearLayout>
</ScrollView>
