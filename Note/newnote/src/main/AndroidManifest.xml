<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.newnote"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".module.gesture.activity.GestureVerifyActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!--主页-->
        <activity android:name=".module.home.activity.MainActivity" />
        <!--设置密码-->
        <activity android:name=".module.gesture.activity.GestureEditActivity" />
        <!--修改密码-->
        <activity android:name=".module.gesture.activity.GestureUpdateActivity" />
        <!--超级密码-->
        <activity android:name=".module.gesture.activity.SuperPassWordActivity" android:windowSoftInputMode="adjustNothing"/>


    </application>

</manifest>