<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.zr.note"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="com.zr.note.base.MyApplication"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.zr.note.ui.gesture.activity.GestureVerifyActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.zr.note.Main2Activity">
        </activity>
        <activity
            android:name="com.zr.note.ui.main.activity.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.zr.note.ui.main.activity.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name="com.zr.note.ui.main.activity.Main3Activity">
        </activity>
        <activity
            android:name="com.zr.note.ui.main.activity.SActivity"
            android:label="@string/title_activity_s"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.zr.note.ui.gesture.activity.GestureEditActivity"
            android:label="GestureEditActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.zr.note.ui.gesture.activity.GestureUpdateActivity"
            android:label="GestureUpdateActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.zr.note.ui.gesture.activity.SuperPassWordActivity"
            android:label="SuperPassWordActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.zr.note.ui.main.activity.MainActivity"
            android:label="MainActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name="com.zr.note.ui.main.activity.AddDataActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:windowSoftInputMode="adjustResize|stateHidden"
            >
        </activity>
    </application>

</manifest>
