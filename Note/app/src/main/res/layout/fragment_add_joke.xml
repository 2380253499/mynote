<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              tools:context=".ui.main.fragment.AddDailyReminderFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="段子说明"
            android:textSize="15sp"
            android:paddingLeft="@dimen/asterisk_padding"
            />
        <com.zr.note.base.customview.MyEditText
            android:id="@+id/et_joke_declare"
            style="@style/editTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLength="30"
            android:singleLine="true"
            android:ellipsize="end"
            app:my_et_border_color="@color/top_color2"
            app:my_et_border_width="1px"
            app:my_et_corner_radius="4px"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            tools:text="afd搭顺风"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/asterisk_padding"
            android:layout_marginRight="@dimen/asterisk_padding"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请填写搞笑段子"
                android:textSize="15sp"
                android:drawableLeft="@drawable/asterisk"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                tools:text="@string/joke_prompt"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/tv_joke_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点我清除"
                android:textSize="15sp"
                android:layout_marginRight="13dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="italic"
                />
        </LinearLayout>

        <com.zr.note.base.customview.MyEditText
            android:id="@+id/et_joke_content"
            style="@style/editTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLength="1000"
            android:minHeight="250dp"
            app:my_et_border_color="@color/top_color2"
            app:my_et_border_width="1px"
            app:my_et_corner_radius="4px"
            android:layout_marginLeft="@dimen/asterisk_padding"
            android:layout_marginRight="@dimen/asterisk_padding"
            android:gravity="top"
            android:padding="5dp"
            app:my_et_hiddenClear="true"
            />

    </LinearLayout>
</LinearLayout>
