<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scrollbars="none"
            tools:context="com.zr.note.ui.main.fragment.AddMemoFragment"
    >
    <include
        layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="48dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数据说明"
            android:textSize="15sp"
            android:paddingLeft="@dimen/asterisk_padding"
            />
        <com.github.customview.MyEditText
            android:id="@+id/et_secret_reminder"
            style="@style/editTextStyle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:maxLength="30"
            android:singleLine="true"
            android:ellipsize="end"
            app:my_et_border_color="@color/top_color2"
            app:my_et_border_width="1px"
            app:my_et_corner_radius="4px"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            tools:text="数据说明"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/asterisk_padding"
            android:layout_marginRight="@dimen/asterisk_padding"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请填写数据"
                android:textSize="15sp"
                android:drawableLeft="@drawable/asterisk"
                />
            <TextView
                android:id="@+id/tv_secret_lengthprompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="(0/5000)"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/tv_secret_copy"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:text="复制"
                android:textSize="15sp"
                android:layout_marginRight="3dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="italic"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/tv_secret_paste"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:text="粘贴"
                android:textSize="15sp"
                android:layout_marginRight="3dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="italic"
                android:gravity="center"
                />
        </LinearLayout>

        <com.github.customview.MyEditText
            android:id="@+id/et_secret_content"
            style="@style/editTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLength="5000"
            android:minHeight="250dp"
            app:my_et_border_color="@color/top_color2"
            app:my_et_border_width="1px"
            app:my_et_corner_radius="4px"
            app:my_et_hiddenClear="true"
            android:layout_marginLeft="@dimen/asterisk_padding"
            android:layout_marginRight="@dimen/asterisk_padding"
            android:gravity="top"
            android:padding="5dp"
            />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_addData_save"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <com.github.customview.MyButton
            android:id="@+id/bt_addSecret_clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="清空"
            android:textColor="@color/white"
            app:my_bt_normal_drawable="@drawable/save_normal"
            app:my_bt_press_drawable="@drawable/save_press"
            android:background="@null"
            />
        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@color/white"
            />
        <com.github.customview.MyButton
            android:id="@+id/bt_addSecret_save"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            app:my_bt_normal_drawable="@drawable/save_normal"
            app:my_bt_press_drawable="@drawable/save_press"
            android:background="@null"
            android:layout_height="match_parent"
            android:text="保存"
            android:textColor="@color/white"
            />
    </LinearLayout>
</RelativeLayout>