<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              tools:context=".ui.main.fragment.AddMemoFragment"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消费说明"
            android:textSize="15sp"
            android:paddingLeft="@dimen/asterisk_padding"
            />
        <com.zr.note.base.customview.MyEditText
            android:id="@+id/et_spend_remark"
            style="@style/editTextStyle"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:maxLength="30"
            android:singleLine="true"
            android:ellipsize="end"
            app:my_et_border_color="@color/top_color2"
            app:my_et_border_width="1px"
            app:my_et_corner_radius="4px"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            tools:text="消费说明"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/asterisk_padding"
            android:layout_marginRight="@dimen/asterisk_padding"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消费金额"
                android:textSize="15sp"
                android:drawableLeft="@drawable/asterisk"
                />
            <TextView
                android:id="@+id/tv_spend_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2016-12-01"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/tv_update_spend_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更改日期"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                />
        </LinearLayout>

        <com.zr.note.base.customview.MyEditText
            android:id="@+id/et_spend_amount"
            style="@style/editTextStyle"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:maxLength="9"
            android:singleLine="true"
            android:ellipsize="end"
            app:my_et_border_color="@color/top_color2"
            app:my_et_border_width="1px"
            app:my_et_corner_radius="4px"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:hint="请填写金额"
            android:textSize="15sp"
            android:inputType="numberDecimal"
            android:layout_marginLeft="@dimen/asterisk_padding"
            android:layout_marginRight="@dimen/asterisk_padding"
            />

    </LinearLayout>
</LinearLayout>
