<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
    >

    <com.zr.customview.MyLinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:my_ll_solid="@color/white"
        app:my_ll_bottom_line="true"
        app:my_ll_border_color="@color/c_divider"
        app:my_ll_border_width="1px"
        >
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:id="@+id/iv_icon_delete"
            android:layout_width="40dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/delete_item_normal"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_spend_year"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            tools:text="android"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:id="@+id/tv_spend_remark"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            tools:text="android"
            android:layout_marginLeft="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/tv_total_spend"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical|right"
            tools:text="android"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            />
    </com.zr.customview.MyLinearLayout>
</RelativeLayout>