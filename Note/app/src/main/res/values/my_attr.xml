<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MyCheckBox">
        <attr name="my_checkbox_normal" format="reference"/>
        <attr name="my_checkbox_checked" format="reference"/>
        <attr name="my_checkbox_normal_color" format="color"/>
        <attr name="my_checkbox_checked_color" format="color"/>
    </declare-styleable>
    <declare-styleable name="MyButton">
        <attr name="my_bt_normal" format="reference"/>
        <attr name="my_bt_press" format="reference"/>
    </declare-styleable>
    <declare-styleable name="MyRadioButton">
        <attr name="my_radio_normal" format="reference"/>
        <attr name="my_radio_checked" format="reference"/>
        <attr name="my_radio_normal_color" format="color"/>
        <attr name="my_radio_checked_color" format="color"/>
        <attr name="my_compound_top" format="boolean"/>
        <attr name="my_compound_bottom" format="boolean"/>
        <attr name="my_compound_left" format="boolean"/>
        <attr name="my_compound_right" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="MyTextView">
        <attr name="my_tv_solid" format="color"/>
        <attr name="my_tv_border_width" format="dimension"/>
        <attr name="my_tv_border_color" format="color"/>
        <attr name="my_tv_border_dashWidth" format="dimension"/>
        <attr name="my_tv_border_dashGap" format="dimension"/>
        <attr name="my_tv_corner_radius" format="dimension"/>
        <attr name="my_tv_corner_topLeftRadius" format="dimension"/>
        <attr name="my_tv_corner_topRightRadius" format="dimension"/>
        <attr name="my_tv_corner_bottomLeftRadius" format="dimension"/>
        <attr name="my_tv_corner_bottomRightRadius" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="MyLinearLayout">
        <attr name="my_ll_solid" format="color"/>
        <attr name="my_ll_border_width" format="dimension"/><!--线的宽度-->
        <attr name="my_ll_border_color" format="color"/>
        <attr name="my_ll_border_dashWidth" format="dimension"/>
        <attr name="my_ll_border_dashGap" format="dimension"/><!--虚线间距-->
        <attr name="my_ll_corner_radius" format="dimension"/>
        <attr name="my_ll_corner_topLeftRadius" format="dimension"/>
        <attr name="my_ll_corner_topRightRadius" format="dimension"/>
        <attr name="my_ll_corner_bottomLeftRadius" format="dimension"/>
        <attr name="my_ll_corner_bottomRightRadius" format="dimension"/>
        <attr name="my_ll_left_line" format="boolean"/>
        <attr name="my_ll_top_line" format="boolean"/>
        <attr name="my_ll_right_line" format="boolean"/>
        <attr name="my_ll_bottom_line" format="boolean"/>
        <!--<attr name="my_ll_normal" format="reference"/>-->
        <!--<attr name="my_ll_press" format="reference"/>-->
    </declare-styleable>
    <declare-styleable name="MyEditText">
        <attr name="my_et_solid" format="color"/>
        <attr name="my_et_border_width" format="dimension"/>
        <attr name="my_et_border_color" format="color"/>
        <attr name="my_et_border_dashWidth" format="dimension"/>
        <attr name="my_et_border_dashGap" format="dimension"/>
        <attr name="my_et_corner_radius" format="dimension"/>
        <attr name="my_et_corner_topLeftRadius" format="dimension"/>
        <attr name="my_et_corner_topRightRadius" format="dimension"/>
        <attr name="my_et_corner_bottomLeftRadius" format="dimension"/>
        <attr name="my_et_corner_bottomRightRadius" format="dimension"/>
        <attr name="my_et_hiddenClear" format="boolean"/>
    </declare-styleable>
</resources>
